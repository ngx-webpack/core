  "description": "Customizable Webpack 2 config generator for Angular projects",
  "main": "index.js",
  "scripts": {
    "cleanup": "rimraf dist",
    "dll": "NODE_ENV=install webpack",
    "build": "npm run cleanup && webpack",
    "deploy-npm": "np --skip-cleanup",
    "lint": "tslint \"src/**/*.ts\"",
    "start": "AOT=true webpack-dev-server",
    "start-prod": "http-server ./dist -p 3000",
    "test": "karma start --single-run",
    "test-watch": "karma start"
  },
